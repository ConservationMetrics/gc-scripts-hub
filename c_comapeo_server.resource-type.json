{
	"type": "object",
	"order": [
		"server_url",
		"access_token"
	],
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"required": [
		"server_url",
		"access_token"
	],
	"properties": {
		"server_url": {
			"type": "string",
			"default": "",
			"placeholder": "https://comapeo.example",
			"pattern": "^(https?://)([^/]+)$",
			"nullable": false,
			"description": "The base URL of your CoMapeo archive server"
		},
		"access_token": {
			"type": "string",
			"default": "",
			"description": "Access token for authenticating with the CoMapeo server"
		}
	}
}